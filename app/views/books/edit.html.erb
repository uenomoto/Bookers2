

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book do |f| %>
      
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, autofocus: true, id:"book_title", class: "form-control book_title" %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :opinion, id:"book_opinion", class: "form-control book_opinion" %>
      </div>
      <div class="form-group">
        <%= f.submit "Update Book", class: "btn btn-success" %>
      </div>
      <% end %>
      
      <%= link_to "Show",book_path(@book.id), class: "book" %> |
      <%= link_to "Back",books_path, class: "back" %>
    </div>
  </div>
</div>