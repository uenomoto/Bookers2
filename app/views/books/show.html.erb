<%= render 'books/list',books: @books %>

<div class="col-md-8 offset-md-1">
  <h2>Book detail</h2>
  <table class="table">
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@user.id) do %>
          <%= image_tag @user.get_profile_image(80,80) %><br>
          <%= @user.name %>
          <% end %>
        </td>
        <td>
          
          <%= @book.title %>
         
        </td>
        <tb><%= @book.opinion %></tb>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Edit",edit_book_path(@book), class: "btn btn-sm btn-success edit_book" %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy",book_path(@book),method: :delete,"data-confirm" => "本当に消しますか？", class: "btn btn-sm btn-danger destroy_book"%>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>